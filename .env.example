# Azure infrastructure (resource group will be created automatically if missing)
RESOURCE_GROUP_NAME=TikTik_Multi_2_RG
AZURE_REGION=switzerlandnorth

# Azure VM Configuration (for VM-based deployment)
VM_NAME=parse-server-vm
VM_SIZE=Standard_B2s
VM_DISK_SIZE=32
VM_DNS_LABEL=parse-vm-prod
VM_SSH_KEY_PATH=~/.ssh/id_rsa.pub

# MongoDB Configuration
# For VM deployment: Uses MongoDB container with these credentials
# For local development: Uses docker-compose with MongoDB container
MONGO_INITDB_ROOT_USERNAME=your_mongo_root_username
MONGO_INITDB_ROOT_PASSWORD=your_secure_mongo_root_password
PARSE_SERVER_DATABASE_NAME=parse

# Database URI Configuration
# For local docker-compose: mongodb://username:password@mongodb:27017/parse?authSource=admin
# For VM deployment: Automatically configured by deploy-to-vm.sh
# For legacy ACI: Use external FQDN (deprecated)
PARSE_SERVER_DATABASE_URI=mongodb://your_mongo_root_username:your_secure_mongo_root_password@mongodb:27017/parse?authSource=admin

# DEPRECATED: Azure Cosmos DB (no longer used due to compatibility issues)
# COSMOS_DB_ACCOUNT_NAME=parse-cosmos-12345
# STORAGE_ACCOUNT_NAME=tiktikstorage8040

# Parse Server configuration
PARSE_SERVER_APPLICATION_ID=your_unique_app_id
PARSE_SERVER_MASTER_KEY=your_secure_master_key

# Parse Server URL
# For local docker-compose: http://localhost:1337/parse
# For VM deployment: http://parse-vm-prod.switzerlandnorth.cloudapp.azure.com:1337/parse (automatically configured)
PARSE_SERVER_URL=http://localhost:1337/parse

# Optional: IP addresses/CIDR ranges allowed to use master key (defaults to localhost)
# For local development: leave empty or set to "0.0.0.0/0,::/0"
# For production: restrict to specific IPs for security
PARSE_SERVER_MASTER_KEY_IPS=

# Parse Dashboard configuration
PARSE_DASHBOARD_APP_NAME=YourAppName
PARSE_DASHBOARD_USER_ID=your_dashboard_username
PARSE_DASHBOARD_USER_PASSWORD=your_secure_dashboard_password
PARSE_DASHBOARD_ALLOW_INSECURE_HTTP=1  # Set to 1 to allow insecure HTTP (for development), 0 for HTTPS only
